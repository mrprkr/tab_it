.toolbar
	p Your Tabs

.tabs-container
	h4 Your Tabs:
	ul
		li(ng-repeat="tab in tabs")
			a(ng-href="/tab/{{tab._id}}") {{tab.name}}
	
	br
	br

	a(href="") create new tab
	.new-tab-form
		form
			label What should we call it?
			br
			input(type="text", placeholder="Tab Name")
			br
			label Who's it for?
			br
			input(type="email", placeholder="Their email")
			br
			button create tab